# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown: align with .markdownlint.yml (MD013=120, MD009 disabled, MD007 indent=4)
[*.{md,markdown,mdx}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 120

# YAML / YML (common in this repo: mkdocs.yml)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

