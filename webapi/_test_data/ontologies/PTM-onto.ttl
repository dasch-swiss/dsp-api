@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix foaf: <http://xmln.com/foaf/0.1/> .
@prefix dc: <http://www.knora.org/ontology/dc#> .
@prefix knora-base: <http://www.knora.org/ontology/knora-base#> .
@prefix salsah-gui: <http://www.knora.org/ontology/salsah-gui#> .
@base <http://www.knora.org/ontology/RTIproject> .

@prefix RTIproject: <http://www.knora.org/ontology/RTIproject#> .
@prefix : <http://www.knora.org/ontology/RTIproject#> .

<http://www.knora.org/ontology/RTIproject> rdf:type owl:Ontology ;

##########################################################
#
# PROPERTIES
#
##########################################################


### ###########################################
### RTIproject:hasPTMCreator

:hasPTMCreator rdf:type owl:ObjectProperty ;

         rdfs:subPropertyOf dc:creator ;

         rdfs:label "PTM creator"@en ;

         rdfs:comment """Name(s) of the creator(s) of the PTM file"""@en ;

         knora-base:subjectClassConstraint :PTM ;

         knora-base:objectClassConstraint knora-base:TextValue ;

         salsah-gui:guiOrder "1"^^xsd:integer ;

         salsah-gui:guiElement salsah-gui:SimpleText ;

         salsah-gui:guiAttribute "min=4" ,
                                 "max=8" ;

         knora-base:hasDefaultViewPermission knora-base:UnknownUser ,
                                             knora-base:KnownUser ;

         knora-base:hasDefaultModifyPermission knora-base:ProjectMember ;

         knora-base:hasDefaultDeletePermission knora-base:Owner .



### ###########################################
### RTIproject:hasPTMlocation

:hasPTMlocation rdf:type owl:ObjectProperty ;

        rdfs:subPropertyOf knora-base:hasValue ;

        rdfs:label  "Location of the PTM setup"@en ;

        rdfs:comment """The address (town / country) where the artefact was photographed and the PTM file was created"""@en ;

        knora-base:subjectClassConstraint :PTM ;

        knora-base:objectClassConstraint knora-base:TextValue ;

        salsah-gui:guiOrder "2"^^xsd:integer ;

        salsah-gui:guiElement salsah-gui:SimpleText ;

        salsah-gui:guiAttribute "size=60" ,
                                "maxlength=100" ;

        knora-base:hasDefaultViewPermission knora-base:KnownUser ,
                                            knora-base:UnknownUser ,
                                            knora-base:ProjectMember ;

        knora-base:hasDefaultDeletePermission knora-base:Owner .


### ###########################################
### RTIproject:hasPTMdate

:hasPTMdate rdf:type owl:ObjectProperty ;

         rdfs:subPropertyOf dc:date ;

         rdfs:label "PTM creation date"@de ;

         rdfs:comment """The date when the original atrefact was photographed and the PTM file was created"""@en ;

         knora-base:subjectClassConstraint :PTM ;

         knora-base:objectClassConstraint knora-base:DateValue ;

         salsah-gui:guiOrder "3"^^xsd:integer ;

         salsah-gui:guiElement salsah-gui:Date ;

         salsah-gui:guiAttribute "size=16" ,
                                 "maxlength=32" ;

         knora-base:hasDefaultViewPermission knora-base:KnownUser ,
                                             knora-base:UnknownUser ;

         knora-base:hasDefaultModifyPermission knora-base:ProjectMember ;

         knora-base:hasDefaultDeletePermission knora-base:Owner .



### ###########################################
### RTIproject:hasPTMexib

:hasPTMexib rdf:type owl:ObjectProperty ;

          rdfs:subPropertyOf knora-base:hasValue ;

          rdfs:label "Ausstellungsort"@de ,
                     "Endroit d'exposition"@fr ,
                     "Posto della mostra"@it ,
                     "Exhibition location"@en ;

          rdfs:comment """The site where the original artefact was photographed """@en ;

          knora-base:subjectClassConstraint :PTM ;

          knora-base:objectClassConstraint knora-base:TextValue ;

          salsah-gui:guiOrder "4"^^xsd:integer ;

          salsah-gui:guiElement salsah-gui:Textarea ;

          salsah-gui:guiAttribute "cols=60" ,
                                  "rows=4" ,
                                  "wrap=soft" ;

          knora-base:hasDefaultViewPermission knora-base:KnownUser ,
                                              knora-base:UnknownUser ;

          knora-base:hasDefaultDeletePermission knora-base:ProjectMember ,
                                                knora-base:Owner .



### ###########################################
### RTIproject:hasPermissions

:hasPermissions rdf:type owl:ObjectProperty ;

             rdfs:subPropertyOf knora-base:hasValue ;

             rdfs:label "Permissions"@en ;

             rdfs:comment """The type of permissions that might be required to access the site and photograph the artefact"""@en ;

             knora-base:subjectClassConstraint :PTM ;

             knora-base:objectClassConstraint knora-base:TextValue ;

             salsah-gui:guiOrder "5"^^xsd:integer ;

             salsah-gui:guiElement salsah-gui:SimpleText ;

             salsah-gui:guiAttribute "size=16" ,
                                 "maxlength=32" ;

             knora-base:hasDefaultViewPermission knora-base:KnownUser ,
                                             knora-base:UnknownUser ;

             knora-base:hasDefaultModifyPermission knora-base:ProjectMember ;

             knora-base:hasDefaultDeletePermission knora-base:Owner .



### ###########################################
### RTIproject:setupIs

:setupIs rdf:type owl:ObjectProperty ;

             rdfs:subPropertyOf knora-base:hasValue ;

             rdfs:label "Setup"@en ;

             rdfs:comment """Description of the setup used to photograph the artefact and the EXIF data"""@en ;

             knora-base:subjectClassConstraint :PTM ;

             knora-base:objectClassConstraint knora-base:TextValue ;

             salsah-gui:guiOrder "6"^^xsd:integer ;

             salsah-gui:guiElement salsah-gui:SimpleText ;

             salsah-gui:guiAttribute "size=16" ,
                                 "maxlength=32" ;

             knora-base:hasDefaultViewPermission knora-base:KnownUser ,
                                             knora-base:UnknownUser ;

             knora-base:hasDefaultModifyPermission knora-base:ProjectMember ;

             knora-base:hasDefaultDeletePermission knora-base:Owner .



### ###########################################
### RTIproject:hasPTMcomment

:hasPTMcomment rdf:type owl:ObjectProperty ;

              rdfs:subPropertyOf knora-base:hasComment ;

              rdfs:label "Kommentar"@de ,
                         "Commentaire"@fr ,
                         "Commento"@it ,
                         "Comment"@en ;

              rdfs:comment """Unstrukturierte Bemerkungen zu einem PTM"""@de ;

              knora-base:subjectClassConstraint :PTM ;

              knora-base:objectClassConstraint knora-base:TextValue ;

              salsah-gui:guiOrder "7"^^xsd:integer ;

              salsah-gui:guiElement salsah-gui:Textarea ;

              salsah-gui:guiAttribute "width=95%" ,
                                      "rows=7" ,
                                      "wrap=soft" ;

              knora-base:hasDefaultViewPermission knora-base:KnownUser ,
                                                  knora-base:UnknownUser ;

              knora-base:hasDefaultModifyPermission knora-base:ProjectMember ;

              knora-base:hasDefaultDeletePermission knora-base:Owner .




##########################################################
#
# RESOURCES
#
##########################################################


##########################################################
### ###########################################
### RTIproject:PTM

:PTM rdf:type owl:Class ;

      rdfs:subClassOf knora-base:Resource ,
                      [
                         rdf:type owl:Restriction ;
                         owl:onProperty :hasPTMCreator ;
                         owl:minCardinality "1 "^^xsd:nonNegativeInteger                      ] ,
                      [
                         rdf:type owl:Restriction ;
                         owl:onProperty :hasPTMlocation ;
                         owl:minCardinality "1"^^xsd:nonNegativeInteger                      ] ,
                      [
                         rdf:type owl:Restriction ;
                         owl:onProperty :hasPTMdate ;
                         owl:cardinality "1"^^xsd:nonNegativeInteger                      ] ,
                      [
                         rdf:type owl:Restriction ;
                         owl:onProperty :hasPTMexib ;
                         owl:cardinality "1"^^xsd:nonNegativeInteger                      ] ,
                      [
                         rdf:type owl:Restriction ;
                         owl:onProperty :hasPermissions ;
                         owl:minCardinality "0"^^xsd:nonNegativeInteger                      ] ,
                      [
                         rdf:type owl:Restriction ;
                         owl:onProperty :setupIs ;
                         owl:cardinality "1"^^xsd:nonNegativeInteger                      ] ,
                      [
                         rdf:type owl:Restriction ;
                         owl:onProperty :hasPTMcomment ;
                         owl:minCardinality "0"^^xsd:nonNegativeInteger                      ] ;

      knora-base:resourceIcon "PTM.gif" ;

      rdfs:label "PTM"@de ,
                 "PTM"@fr ,
                 "PTM"@it ,
                 "PTM"@en ;

      rdfs:comment """This resourse class describes the PTM file and its creation conditions"""@en ;

      knora-base:hasDefaultRestrictedViewPermission knora-base:UnknownUser ;

      knora-base:hasDefaultViewPermission knora-base:KnownUser ;

      knora-base:hasDefaultModifyPermission knora-base:ProjectMember ,
                                            knora-base:Owner .



